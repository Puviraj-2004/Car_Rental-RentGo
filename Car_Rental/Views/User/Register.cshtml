@model Car_Rental.Models.Entities.User

@{
    ViewData["Title"] = "Create Account";
    Layout = "_LoginLayout"; // Using the same layout
}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<!-- Font Awesome for password toggle icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    body {
        background: none !important;
        font-family: 'Poppins', sans-serif;
    }

    .hero-section {
        position: relative;
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
        overflow: hidden;
    }

    .bg-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        transform: scale(1.1);
    }

    .container {
        position: relative;
        z-index: 1;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
        padding: 40px 35px;
        max-width: 500px;
        margin: auto;
    }

    .card-header-register {
        text-align: center;
        margin-bottom: 2rem;
        color: #fff;
    }

        .card-header-register i {
            font-size: 50px;
            color: #0d6efd;
        }

        .card-header-register h2 {
            margin-top: 0.5rem;
            margin-bottom: 0.25rem;
            font-weight: 600;
        }

        .card-header-register small {
            opacity: 0.8;
        }

    .glass-card label {
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-control-glass {
        width: 100%;
        padding: 12px 15px;
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 14px;
    }

        .form-control-glass::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control-glass:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .password-input-group {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        cursor: pointer;
        padding: 0;
        font-size: 16px;
    }

        .password-toggle:hover {
            color: rgba(255, 255, 255, 0.9);
        }

    .alert-glass {
        color: #fff;
        backdrop-filter: blur(5px);
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .alert-glass-success {
        background: rgba(25, 135, 84, 0.5);
        border: 1px solid rgba(25, 135, 84, 0.7);
    }

    .alert-glass-danger {
        background: rgba(220, 53, 69, 0.5);
        border: 1px solid rgba(220, 53, 69, 0.7);
    }

    .text-danger {
        color: #ffc0c0 !important;
        font-weight: 500;
        font-size: 12px;
        margin-top: 5px;
    }

    .btn-submit-custom {
        width: 100%;
        padding: 14px;
        background-color: #0d6efd;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-submit-custom:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }

    .footer-text {
        text-align: center;
        margin-top: 2rem;
        color: rgba(255, 255, 255, 0.8);
    }

        .footer-text a {
            color: #0d6efd;
            font-weight: 600;
            text-decoration: none;
        }

            .footer-text a:hover {
                text-decoration: underline;
                color: #0b5ed7;
            }
</style>

<section class="hero-section">
    <!-- Background video -->
    <video autoplay muted loop playsinline class="bg-video">
        <source src="~/media/Video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">

                <!-- Glass register form card -->
                <div class="glass-card">

                    <!-- Card Header with Icon and Title -->
                    <div class="card-header-register">
                        <i class="bi bi-car-front"></i>
                        <h2>Create Your Account</h2>
                        <small>Join RentGo today and start your journey!</small>
                    </div>

                    <!-- Card Body with the Form -->
                    <div class="card-body-register">

                        <!-- Success Message Display -->
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert-glass alert-glass-success">@ViewBag.SuccessMessage</div>
                        }

                        <!-- Error Message Display -->
                        @if (ViewBag.PasswordError != null)
                        {
                            <div class="alert-glass alert-glass-danger">@ViewBag.PasswordError</div>
                        }

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Full Name Input -->
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control-glass" placeholder="Enter your full name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <!-- Email Input -->
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control-glass" placeholder="Enter your email address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Phone Number Input -->
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control-glass" placeholder="Enter your phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <!-- Password Input -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <div class="password-input-group">
                                    <input asp-for="Password" type="password" id="password" class="form-control-glass" placeholder="Create a strong password" />
                                    <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Confirm Password Input -->
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <div class="password-input-group">
                                    <input name="confirmPassword" type="password" id="confirmPassword" class="form-control-glass" placeholder="Confirm your password" />
                                    <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn-submit-custom">
                                Create Account
                            </button>
                        </form>

                        <!-- Footer with a link to the Login page -->
                        <div class="footer-text">
                            <small>Already have an account? <a asp-controller="User" asp-action="Login">Sign In</a></small>
                        </div>
                    </div>

                </div> <!-- End of Card -->

            </div> <!-- End of Column -->
        </div> <!-- End of Row -->
    </div> <!-- End of Container -->
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, button) {
            const passwordInput = document.getElementById(inputId);
            const icon = button.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Form validation enhancement
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');
            
            function validatePasswords() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity('Passwords do not match');
                } else {
                    confirmPassword.setCustomValidity('');
                }
            }
            
            password.addEventListener('input', validatePasswords);
            confirmPassword.addEventListener('input', validatePasswords);
        });
    </script>
}