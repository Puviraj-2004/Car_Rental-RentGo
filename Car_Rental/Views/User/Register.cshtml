@model Car_Rental.Models.Entities.User

@{
    ViewData["Title"] = "Create Account";
    Layout = "_LoginLayout"; // Using the same layout
}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<!-- Bootstrap Icons (for the car icon and error messages) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Intha styles namma Login Page-la irunthu eduthukapattathu */
    body {
        background: none !important;
        font-family: 'Poppins', sans-serif;
    }

    .hero-section {
        position: relative;
        width: 100%;
        min-height: 100vh; /* Min-height use pannurathunala form perusa irunthaalum problem illa */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0; /* Mobile view-la mela keela konjam space */
        overflow: hidden;
    }

    .bg-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        /* filter: blur(8px); */
        transform: scale(1.1);
    }

    .container {
        position: relative;
        z-index: 1;
    }

    /* Ithu namma glass effect-oda card */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
        padding: 40px 35px;
        max-width: 500px; /* Register form konjam perusa irukkalaam */
        margin: auto;
    }

    /* Card Header-ukkaana style (Car icon inga varum) */
    .card-header-register {
        text-align: center;
        margin-bottom: 2rem;
        color: #fff;
    }

        .card-header-register i {
            font-size: 50px;
        }

        .card-header-register h2 {
            margin-top: 0.5rem;
            margin-bottom: 0.25rem;
            font-weight: 600;
        }

        .card-header-register small {
            opacity: 0.8;
        }

    /* Labels-oda niram maathurathukku */
    .glass-card label {
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 0.5rem;
    }

    /* Input fields-ukkaana glass style */
    .form-control-glass {
        width: 100%;
        padding: 10px 15px;
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .form-control-glass::placeholder {
            color: #ddd;
        }

        .form-control-glass:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
            box-shadow: none;
        }

    /* Success and Error messages-ukkaana style */
    .alert-glass {
        color: #fff;
        backdrop-filter: blur(5px);
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .alert-glass-success {
        background: rgba(25, 135, 84, 0.5); /* Green */
        border: 1px solid rgba(25, 135, 84, 0.7);
    }

    .alert-glass-danger {
        background: rgba(220, 53, 69, 0.5); /* Red */
        border: 1px solid rgba(220, 53, 69, 0.7);
    }

    /* Validation error text-oda niram (theliva theriyurathukku) */
    .text-danger {
        color: #ffc0c0 !important;
        font-weight: 500;
    }

    /* Button */
    .btn-submit-custom {
        width: 100%;
        padding: 12px;
        background-color: #0d6efd;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit-custom:hover {
            background-color: #0b5ed7;
        }

    /* Keela irukkum 'Sign In' link */
    .footer-text {
        text-align: center;
        margin-top: 2rem;
        color: rgba(255, 255, 255, 0.8);
    }

        .footer-text a {
            color: #fff;
            font-weight: 600;
            text-decoration: none;
        }

            .footer-text a:hover {
                text-decoration: underline;
            }

</style>

<section class="hero-section">
    <!-- Pinadiyil odum video -->
    <video autoplay muted loop playsinline class="bg-video">
        <source src="~/media/Video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">

                <!-- Munadiyil theriyum puthiya glass register form card -->
                <div class="glass-card">

                    <!-- Card Header with Icon and Title -->
                    <div class="card-header-register">
                        @* <i class="bi bi-car-front"></i> *@
                        <h2>Create Your Account</h2>
                        <small>Join us today and start your journey!</small>
                    </div>

                    <!-- Card Body with the Form -->
                    <div class="card-body-register">

                        <!-- Success Message Display -->
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert-glass alert-glass-success">@ViewBag.SuccessMessage</div>
                        }

                        <!-- Error Message Display -->
                        @if (ViewBag.PasswordError != null)
                        {
                            <div class="alert-glass alert-glass-danger">@ViewBag.PasswordError</div>
                        }

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Full Name Input -->
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control-glass" placeholder="e.g., John Doe" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <!-- Email Input -->
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control-glass" placeholder="name@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Phone Number Input -->
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control-glass" placeholder="e.g., 0712345678" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <!-- Password Input -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control-glass" placeholder="Choose a strong password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Confirm Password Input -->
                            <div class="mb-4">
                                <label class="form-label">Confirm Password</label>
                                <input type="password" name="confirmPassword" class="form-control-glass" placeholder="Re-enter password" />
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn-submit-custom">Create Account</button>
                            </div>
                        </form>

                        <!-- Footer with a link to the Login page -->
                        <div class="footer-text">
                            <small>Already have an account? <a asp-controller="User" asp-action="Login">Sign In</a></small>
                        </div>
                    </div>

                </div> <!-- End of Card -->

            </div> <!-- End of Column -->
        </div> <!-- End of Row -->
    </div> <!-- End of Container -->
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
