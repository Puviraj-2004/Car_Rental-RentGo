@model Car_Rental.Models.Entities.DiscountCode

@{
    ViewData["Title"] = "Create Discount Code";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-white text-center py-3" style="background: linear-gradient(135deg,#0B2545,#13678A); font-size:1.5rem; font-weight:700;">
                    Create Discount Code
                </div>
                <div class="card-body p-4">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-action="Add" method="post" novalidate>
                        <!-- Discount Code -->
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label fw-bold">Discount Code</label>
                            <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter discount code" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>

                        <!-- Discount Type -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Discount Type</label>
                            <div class="row g-2">
                                <div class="col">
                                    <input asp-for="DiscountPercentage" type="number" min="0" max="100" class="form-control form-control-lg" id="discountPercent" placeholder="0-100%" />
                                    <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                                </div>
                                <div class="col">
                                    <input asp-for="FixedAmountDiscount" type="number" min="0" class="form-control form-control-lg" id="fixedAmount" placeholder="Fixed Amount" />
                                    <span asp-validation-for="FixedAmountDiscount" class="text-danger small"></span>
                                </div>
                            </div>
                            <small class="text-muted">Enter either percentage or amount, not both.</small>
                        </div>

                        <!-- Start & End Date -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                                <input asp-for="StartDate" type="date" class="form-control form-control-lg" id="startDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                                <input asp-for="EndDate" type="date" class="form-control form-control-lg" id="endDate" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Usage Limit -->
                        <div class="mb-3">
                            <label asp-for="UsageLimit" class="form-label fw-bold">Usage Limit</label>
                            <input asp-for="UsageLimit" class="form-control form-control-lg" min="1" />
                            <small class="text-muted">Number of times discount can be used</small>
                            <span asp-validation-for="UsageLimit" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Status</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="IsActive" value="true" checked />
                                <label class="form-check-label">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="IsActive" value="false" />
                                <label class="form-check-label">Inactive</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="List" class="btn btn-secondary btn-lg me-3">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">Create</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Disable one input if the other has value
        const percentInput = document.getElementById("discountPercent");
        const amountInput = document.getElementById("fixedAmount");

        percentInput.addEventListener("input", () => {
            amountInput.disabled = percentInput.value.length > 0;
        });
        amountInput.addEventListener("input", () => {
            percentInput.disabled = amountInput.value.length > 0;
        });

        // End date must be after start date
        const startDateInput = document.getElementById("startDate");
        const endDateInput = document.getElementById("endDate");

        startDateInput.addEventListener("change", () => {
            endDateInput.min = startDateInput.value;
        });
    </script>
}
