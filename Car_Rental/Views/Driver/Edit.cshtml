@model Car_Rental.Models.Entities.Driver

@{
    ViewData["Title"] = "Edit Driver";
}
@{
    Layout = "_AdminLayout"; // Ensure it uses the LoginLayout
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center p-4 rounded-top" style="background: linear-gradient(90deg, #0d9488, #074746); color:white;">
            <h3 class="mb-0 fw-bold">@ViewData["Title"]</h3>
        </div>

        <div class="card-body p-5 bg-light">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
                <input type="hidden" asp-for="DriverID" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label fw-bold"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone number" type="text" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NIC" class="form-label fw-bold"></label>
                        <input asp-for="NIC" class="form-control" placeholder="Enter NIC number" />
                        <span asp-validation-for="NIC" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DriverLicenseNumber" class="form-label fw-bold"></label>
                        <input asp-for="DriverLicenseNumber" type="text" class="form-control" placeholder="Enter License number" />
                        <span asp-validation-for="DriverLicenseNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LicenseExpiryDate" class="form-label fw-semibold">License Expiry Date</label>
                        <input asp-for="LicenseExpiryDate" type="date" class="form-control form-control-lg shadow-sm rounded-3" />
                        <span asp-validation-for="LicenseExpiryDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FeePerDay" class="form-label fw-bold"></label>
                        <input asp-for="FeePerDay" class="form-control" placeholder="Enter Fee Per Day" type="number" />
                        <span asp-validation-for="FeePerDay" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Car_Rental.Enum.DriverStatus>()" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Upload Photo</label>
                        <input type="file" name="ImageFile" class="form-control form-control-lg shadow-sm rounded-2" accept="image/*" />
                        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                        {
                            <div class="mt-2">
                                <img src="@Model.PhotoUrl" class="img-thumbnail" style="height:100px;" />
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a asp-action="List" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
                    <button type="submit" class="btn btn-lg shadow-sm" style="background:#074746; color:white;">Update Driver</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
