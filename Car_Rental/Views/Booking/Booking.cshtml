        // Update statistics cards
        function updateStats(stats) {
            document.querySelector('#statsContainer .stat-card.primary .h5').innerHTML = stats.total;
            document.querySelector('#statsContainer .stat-card.success .h5').innerHTML = stats.confirmed;
            document.querySelector('#statsContainer .stat-card.warning .h5').innerHTML = stats.pending;
            document.querySelector('#statsContainer .stat-card.danger .h5').innerHTML = stats.cancelled;
        }

        // Update bookings table
        function updateBookingsTable(bookings) {
            const tableBody = document.querySelector('#bookingsTable tbody');
            tableBody.innerHTML = '';

            if (bookings.length === 0) {
                document.getElementById('tableLoading').classList.add('d-none');
                document.getElementById('emptyState').classList.remove('d-none');
                return;
            }

            bookings.forEach(booking => {
                const statusClass = {
                    'confirmed': 'bg-success',
                    'pending': 'bg-warning',
                    'cancelled': 'bg-danger',
                    'completed': 'bg-info'
                }[booking.status] || 'bg-secondary';

                const row = document.createElement('tr');
                row.innerHTML = `
                            <td>${booking.id}</td>
                            <td>${booking.customer}</td>
                            <td>${booking.roomType}</td>
                            <td>${booking.checkIn}</td>
                            <td>${booking.checkOut}</td>
                            <td>${booking.guests}</td>
                            <td>${booking.amount}</td>
                            <td><span class="badge badge-status ${statusClass}">${booking.status.charAt(0).toUpperCase() + booking.status.slice(1)}</span></td>
