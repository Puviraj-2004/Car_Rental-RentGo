
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car_Rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/list.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Car_Rental.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* --- Sidebar --- */
        .sidebar {
            width: 260px;
            background-color: #0B2545;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 3px 0 20px rgba(0,0,0,0.1);
            color: white;
        }

            .sidebar .logo-container {
                padding: 1.5rem;
                text-align: center;
            }

            .sidebar hr {
                border-top: 1px solid rgba(255, 255, 255, 0.1);
            }

            .sidebar .nav-link {
                color: #FFFFFF;
                opacity: 0.7;
                font-weight: 500;
                padding: 0.8rem 1.5rem;
                margin: 0.3rem 1rem;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link i {
                    margin-right: 15px;
                    font-size: 1.1rem;
                }

                .sidebar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.05);
                    opacity: 1;
                }

                .sidebar .nav-link.active {
                    background-color: #13678A;
                    color: #FFFFFF;
                    opacity: 1;
                    font-weight: 600;
                    box-shadow: 0 5px 15px rgba(19,103,138,0.3);
                }

        /* --- Topbar --- */
        .topbar {
            position: fixed;
            top: 0;
            left: 260px;
            right: 0;
            height: 60px;
            background-color: #0B2545; /* Same as sidebar */
            border-bottom: 1px solid #13678A;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 0 1.5rem;
            z-index: 1000;
            color: #FFFFFF;
        }

            .topbar .notification {
                position: relative;
                margin-right: 1.5rem;
                cursor: pointer;
                font-size: 1.2rem;
                color: #FFFFFF;
            }

                .topbar .notification .badge {
                    position: absolute;
                    top: -5px;
                    right: -5px;
                    width: 16px;
                    height: 16px;
                    font-size: 10px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

            .topbar .profile-dropdown a {
                color: #FFFFFF;
                text-decoration: none;
            }

            .topbar .profile-img {
                width: 38px;
                height: 38px;
                border-radius: 50%;
                object-fit: cover;
                margin-right: 8px;
                border: 1px solid #FFFFFF;
            }

        /* --- Main content --- */
        .main-content-wrapper {
            margin-left: 260px;
            margin-top: 60px; /* Topbar height */
            padding: 2rem;
            background-color: #f5f7fa;
            min-height: 100vh;
        }

        /* Topbar dropdown menu */
        .topbar .dropdown-menu {
            background-color: #0B2545;
            border: 1px solid #13678A;
        }

            .topbar .dropdown-menu a {
                color: #FFFFFF;
            }

                .topbar .dropdown-menu a:hover {
                    background-color: #13678A;
                }
    </style>
</head>
<body class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column flex-shrink-0">
        <div class="logo-container">
            <a href="/" class="d-flex align-items-center justify-content-center text-white text-decoration-none">
                RENTGO
            </a>
        </div>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a asp-area="" asp-controller="Admin" asp-action="Dashboard" class="nav-link text-white mb-1">
                    <i class="fas fa-chart-line"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Car" asp-action="List" class="nav-link text-white mb-1">
                    <i class="fas fa-car"></i> Car Management
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Booking" asp-action="Booking" class="nav-link text-white mb-1">
                    <i class="fas fa-calendar-alt"></i> Booking Management
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Customer" asp-action="CustomerList" class="nav-link text-white mb-1">
                    <i class="fas fa-users"></i> Customer Management
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Staff" asp-action="List" class="nav-link text-white mb-1">
                    <i class="fas fa-user-tie"></i> Staff Management
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Driver" asp-action="List" class="nav-link text-white mb-1">
                    <i class="fas fa-user-tie"></i> Driver Management
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Discount" asp-action="List" class="nav-link text-white mb-1">
                    <i class="fas fa-tags"></i> Discount Management
                </a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Insurance" asp-action="List" class="nav-link text-white mb-1">
                    <i class="fas fa-tags"></i> Insurance Management
                </a>
            </li>
        </ul>
    </div>

    <!-- Topbar -->
    <div class="topbar">
        <div class="notification">
            <i class="fas fa-bell"></i>
            <span class="badge bg-danger">3</span>
        </div>
        <div class="profile-dropdown dropdown">
            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                <img src="~/Media/Admin.png" alt="Profile" class="profile-img">
                <span>Admin Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item text-white">Logout</button>
                    </form>
                </li>
            </ul>

        </div>
    </div>

    <!-- Main content -->
    <div class="main-content-wrapper">
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
