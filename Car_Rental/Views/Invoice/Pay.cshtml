@model Car_Rental.Models.Entities.Invoice
@{
    ViewData["Title"] = "Complete Payment";
    Layout = "_UserLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="text-center mb-4">
                <h1 class="fw-bold">@ViewData["Title"]</h1>
                <p class="text-muted">Securely complete your payment to confirm your booking.</p>
            </div>

            <!-- Invoice Summary -->
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Invoice Summary</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Booking Reference</dt>
                        <dd class="col-sm-8">@Model.Booking.BookingReference</dd>

                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8 fs-4 fw-bold text-success">@Model.TotalAmount.ToString("C")</dd>
                    </dl>
                </div>
            </div>

            <!-- Payment Form -->
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Payment Details</h4>
                </div>
                <div class="card-body p-4">
                    <!-- ============================================= -->
                    <!--            THE CORRECTION in the form tag           -->
                    <!-- `asp-action` now points to "PayConfirmation" -->
                    <!-- ============================================= -->
                    <form asp-controller="Invoice" asp-action="PayConfirmation" method="post">
                        <input type="hidden" name="bookingReference" value="@Model.Booking.BookingReference" />

                        <div class="mb-3">
                            <label class="form-label">Card Number</label>
                            <input name="cardNumber" class="form-control form-control-lg" placeholder="xxxx xxxx xxxx xxxx" required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Date</label>
                                <input name="expiryDate" class="form-control form-control-lg" placeholder="MM / YY" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">CVC</label>
                                <input name="cvc" class="form-control form-control-lg" placeholder="123" required />
                            </div>
                        </div>
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold">Pay @Model.TotalAmount.ToString("C") Now</button>
                        </div>
                        <div class="text-center mt-3 small text-muted">
                            <i class="bi bi-lock-fill"></i> This is a simulated secure payment.
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>