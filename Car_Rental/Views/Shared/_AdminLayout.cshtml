<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentGo Admin</title>

    <!-- Google Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- ==================== SIDEBAR ==================== -->
    <div class="sidebar flex-shrink-0" id="sidebar">
        <div class="sidebar-header">
            <a asp-controller="Admin" asp-action="Dashboard" class="logo-link">
                <i class="fas fa-car-side"></i>
                <span class="logo-text">RENTGO</span>
            </a>
        </div>
        <hr>
        <div class="sidebar-nav-wrapper">
            <ul class="nav nav-pills flex-column mb-auto sidebar-nav">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Admin" asp-action="Dashboard" class="nav-link">
                        <i class="fas fa-chart-pie"></i> <span class="nav-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Car" asp-action="List" class="nav-link">
                        <i class="fas fa-car"></i> <span class="nav-text">Fleet Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Booking" asp-action="Booking" class="nav-link">
                        <i class="fas fa-calendar-check"></i> <span class="nav-text">Reservations</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Admin" asp-action="Customers" class="nav-link">
                        <i class="fas fa-users"></i> <span class="nav-text">Customer Details</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Insurance" asp-action="List" class="nav-link">
                        <i class="fas fa-shield-alt"></i> <span class="nav-text">Coverage Plans</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- ==================== MAIN WRAPPER (TOPBAR + CONTENT) ==================== -->
    <div class="main-wrapper">
        <!-- TOPBAR -->
        <nav class="topbar">
            <!-- Mobile Menu Toggle Button -->
            <button class="menu-toggle" id="menu-toggle" type="button">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Page Title with Icon -->
            <div class="topbar-title d-flex align-items-center">
                <div class="page-icon me-3">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <div>
                    <h4 class="mb-0 text-white">@ViewData["Title"]</h4>
                    <small class="text-light opacity-75">Admin Panel</small>
                </div>
            </div>

            <!-- Simplified Admin Profile -->
            <div class="topbar-actions ms-auto">
                <div class="admin-profile" onclick="showLogoutModal()">
                    <div class="d-flex align-items-center cursor-pointer">
                        <div class="profile-avatar me-2">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <div class="profile-info text-white">
                            <div class="profile-name">Admin User</div>
                            <small class="text-light opacity-75">Administrator</small>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- MAIN CONTENT (This is the scrollable area) -->
        <div class="main-content-wrapper">
            <main role="main" class="main-content">
                @RenderBody()
            </main>
            
            <!-- Admin Footer -->
            <footer class="admin-footer">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p class="mb-0 text-muted">
                                <i class="fas fa-copyright me-1"></i>
                                @DateTime.Now.Year RentGo Car Rental. All rights reserved.
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-sign-out-alt me-2"></i>Confirm Logout
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-question-circle fa-3x text-warning"></i>
                    </div>
                    <h6>Are you sure you want to logout?</h6>
                    <p class="text-muted small">You will be redirected to the home page.</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <form asp-controller="User" asp-action="Logout" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Yes, Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Mobile sidebar toggle
            const menuToggle = document.getElementById("menu-toggle");
            if(menuToggle) {
                menuToggle.addEventListener("click", function () {
                    document.getElementById("sidebar").classList.toggle("show");
                });
            }

            // Active nav-link logic
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll(".sidebar .nav-link");
            let bestMatch = null;
            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href').toLowerCase();
                if (currentPath.startsWith(linkPath)) {
                    if (!bestMatch || linkPath.length > bestMatch.getAttribute('href').length) {
                        bestMatch = link;
                    }
                }
            });
            navLinks.forEach(link => link.classList.remove('active'));
            if (bestMatch) {
                bestMatch.classList.add('active');
            }
        });

        function showLogoutModal() {
            const modal = new bootstrap.Modal(document.getElementById('logoutModal'));
            modal.show();
        }
    </script>

    <style>
        /* Enhanced Topbar Styles */
        .topbar {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            border-bottom: 3px solid #3498db;
        }

        .topbar-title h4 {
            font-weight: 600;
            text-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }

        .page-icon {
            width: 40px;
            height: 40px;
            background: rgba(52, 152, 219, 0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #3498db;
            font-size: 1.2rem;
        }

        .menu-toggle {
            background: rgba(255,255,255,0.1);
            border: 1px solid rgba(255,255,255,0.2);
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .menu-toggle:hover {
            background: rgba(255,255,255,0.2);
            border-color: rgba(255,255,255,0.3);
        }

        .revenue-display {
            background: rgba(255,255,255,0.1);
            padding: 8px 16px;
            border-radius: 8px;
            backdrop-filter: blur(10px);
        }

        .revenue-amount {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .profile-avatar {
            width: 35px;
            height: 35px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white; /* icon stays white */
        }

        .cursor-pointer {
            cursor: pointer;
        }

        .profile-info {
            display: flex;
            flex-direction: column;
            line-height: 1.2;
            color: white; /* text inside profile-info is white */
        }

        .profile-name {
            font-weight: 600;
            font-size: 0.95rem;
            color: white; /* ensure name is white */
        }

        .profile-info small {
            color: rgba(255,255,255,0.7); /* slightly lighter for subtitle */
        }



        .profile-avatar-large {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .profile-menu {
            min-width: 280px;
        }


        .btn-outline-light:hover {
            background-color: rgba(255,255,255,0.2);
            border-color: rgba(255,255,255,0.3);
        }

        .admin-profile {
            cursor: pointer;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
            color: white; /* ensure text is white */
        }

            .admin-profile:hover {
                background-color: rgba(255,255,255,0.1);
                transform: translateY(-1px);
            }


        /* Admin Footer Styles */
        .admin-footer {
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            padding: 1rem 0;
            margin-top: 2rem;
        }

        .admin-footer p {
            font-size: 0.875rem;
        }

        .admin-footer i {
            color: #6c757d;
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>