@model Car_Rental.Models.Entities.Car

@{
    ViewData["Title"] = "Edit Car";
}

<div class="container my-5">
    <div class="card shadow-lg rounded-4 p-4">
        <div class="card-header text-white text-center"
             style="background: linear-gradient(90deg,#0B2545,#13678A); font-size:1.8rem; font-weight:700;">
            Edit Car
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
                @Html.HiddenFor(m => m.CarId) <!-- Keep ID hidden for update -->

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="RegistrationNumber" class="form-label fw-bold"></label>
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label fw-bold"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label fw-bold"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Year" class="form-label fw-bold"></label>
                        <input asp-for="Year" type="number" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RentalPricePerDay" class="form-label fw-bold"></label>
                        <input asp-for="RentalPricePerDay" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="RentalPricePerDay" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="FuelType" class="form-label fw-bold"></label>
                        <select asp-for="FuelType" asp-items="Html.GetEnumSelectList<Car_Rental.Enum.FuelType>()" class="form-select"></select>
                        <span asp-validation-for="FuelType" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Transmission" class="form-label fw-bold"></label>
                        <select asp-for="Transmission" asp-items="Html.GetEnumSelectList<Car_Rental.Enum.TransmissionType>()" class="form-select"></select>
                        <span asp-validation-for="Transmission" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Car_Rental.Enum.CarStatus>()" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <!-- 🔹 Offer Fields -->
                    <div class="col-md-6">
                        <label asp-for="OfferPercentage" class="form-label fw-bold">Offer Percentage</label>
                        <input asp-for="OfferPercentage" type="number" step="0.01"
                               class="form-control" id="offerPercent" placeholder="e.g. 10 for 10%" />
                        <span asp-validation-for="OfferPercentage" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="OfferAmount" class="form-label fw-bold">Offer Amount</label>
                        <input asp-for="OfferAmount" type="number" step="0.01"
                               class="form-control" id="offerAmount" placeholder="e.g. 5000" />
                        <span asp-validation-for="OfferAmount" class="text-danger small"></span>
                    </div>

                    <!-- Car Image -->
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Car Image Preview</label>
                        <div class="mb-2">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="Car Image" id="imagePreview" class="img-fluid rounded shadow-sm" style="max-height:200px;" />
                            }
                            else
                            {
                                <img src="" alt="Car Image" id="imagePreview" class="img-fluid rounded shadow-sm d-none" style="max-height:200px;" />
                                <p class="text-muted" id="noImageText">No image uploaded</p>
                            }
                        </div>
                        <label class="form-label fw-bold">Upload New Image (optional)</label>
                        <input type="file" name="ImageFile" id="imageFileInput" class="form-control" accept="image/*" />
                    </div>

                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="List" class="btn btn-outline-secondary me-3">Cancel</a>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // ===== Image Preview Logic =====
            const imageFileInput = document.getElementById('imageFileInput');
            const imagePreview = document.getElementById('imagePreview');
            const noImageText = document.getElementById('noImageText');

            imageFileInput.addEventListener('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        imagePreview.src = e.target.result;
                        imagePreview.classList.remove('d-none');
                        if (noImageText) noImageText.style.display = 'none';
                    };
                    reader.readAsDataURL(file);
                }
            });

            // ===== Offer Fields Disable/Enable Logic =====
            const percentInput = document.getElementById("offerPercent");
            const amountInput = document.getElementById("offerAmount");

            function toggleOfferInputs() {
                if (percentInput.value.length > 0) {
                    amountInput.disabled = true;
                } else {
                    amountInput.disabled = false;
                }

                if (amountInput.value.length > 0) {
                    percentInput.disabled = true;
                } else {
                    percentInput.disabled = false;
                }
            }

            percentInput.addEventListener("input", toggleOfferInputs);
            amountInput.addEventListener("input", toggleOfferInputs);

            // Initialize on page load
            toggleOfferInputs();

        });
    </script>
}
