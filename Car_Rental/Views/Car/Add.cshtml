@model Car_Rental.Models.Entities.Car

@{
    ViewData["Title"] = "Add New Car";
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <div class="card shadow-lg rounded-4 p-4">
        <div class="card-header text-white text-center"
             style="background: linear-gradient(90deg,#0B2545,#13678A); font-size:1.8rem; font-weight:700;">
            Add New Car
        </div>

        <div class="card-body">
            <form asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="RegistrationNumber" class="form-label fw-bold"></label>
                        <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label fw-bold"></label>
                        <input asp-for="Brand" class="form-control" placeholder="Enter car brand" />
                        <span asp-validation-for="Brand" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label fw-bold"></label>
                        <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                        <span asp-validation-for="Model" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Year" class="form-label fw-bold"></label>
                        <input asp-for="Year" type="number" class="form-control" placeholder="e.g. 2022" />
                        <span asp-validation-for="Year" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RentalPricePerDay" class="form-label fw-bold"></label>
                        <input asp-for="RentalPricePerDay" type="number" step="0.01" class="form-control" placeholder="Rental Price per day" />
                        <span asp-validation-for="RentalPricePerDay" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        @* Booked விருப்பம் நீக்கப்பட்டுள்ளது *@
                        <select asp-for="Status" asp-items="@ViewBag.StatusList" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />
                    <h5 class="text-primary">Specifications</h5>

                    @* --- ✅ புதிதாக சேர்க்கப்பட்ட புலங்கள் --- *@
                    <div class="col-md-6">
                        <label asp-for="NumberOfSeats" class="form-label fw-bold"></label>
                        <input asp-for="NumberOfSeats" type="number" class="form-control" placeholder="e.g. 5" />
                        <span asp-validation-for="NumberOfSeats" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Mileage" class="form-label fw-bold"></label>
                        <input asp-for="Mileage" type="number" step="0.01" class="form-control" placeholder="e.g. 15.5 km/l" />
                        <span asp-validation-for="Mileage" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="FuelType" class="form-label fw-bold"></label>
                        <select asp-for="FuelType" asp-items="Html.GetEnumSelectList<Car_Rental.Enum.FuelType>()" class="form-select"></select>
                        <span asp-validation-for="FuelType" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Transmission" class="form-label fw-bold"></label>
                        <select asp-for="Transmission" asp-items="Html.GetEnumSelectList<Car_Rental.Enum.TransmissionType>()" class="form-select"></select>
                        <span asp-validation-for="Transmission" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 d-flex align-items-end">
                        <div class="form-check form-switch form-check-lg">
                            <input asp-for="IsAirConditioned" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAirConditioned" class="form-check-label fw-bold"></label>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h5 class="text-primary">Pricing & Offers</h5>

                    <div class="col-md-4">
                        <label asp-for="OfferPercentage" class="form-label fw-bold">Offer (%)</label>
                        <input asp-for="OfferPercentage" type="number" step="0.01"
                               class="form-control" id="offerPercent" placeholder="e.g. 10" />
                        <span asp-validation-for="OfferPercentage" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="OfferAmount" class="form-label fw-bold">Offer Amount ($)</label>
                        <input asp-for="OfferAmount" type="number" step="0.01"
                               class="form-control" id="offerAmount" placeholder="e.g. 50" />
                        <span asp-validation-for="OfferAmount" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold">Car Image</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    </div>

                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="List" class="btn btn-outline-secondary me-3">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Car</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const percentInput = document.getElementById("offerPercent");
        const amountInput = document.getElementById("offerAmount");

        function toggleOfferInputs() {
            if (percentInput.value.length > 0 && parseFloat(percentInput.value) > 0) {
                amountInput.disabled = true;
                amountInput.value = ''; // Clear the other input
            } else {
                amountInput.disabled = false;
            }

            if (amountInput.value.length > 0 && parseFloat(amountInput.value) > 0) {
                percentInput.disabled = true;
                percentInput.value = ''; // Clear the other input
            } else {
                percentInput.disabled = false;
            }
        }

        percentInput.addEventListener("input", toggleOfferInputs);
        amountInput.addEventListener("input", toggleOfferInputs);

        toggleOfferInputs();
    </script>
}