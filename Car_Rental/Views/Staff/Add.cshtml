@model Car_Rental.Models.Entities.Staff

@{
    ViewData["Title"] = "Add New Staff";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <!-- Header -->
        <div class="card-header text-center p-4 rounded-top" style="background: linear-gradient(90deg, #0d9488, #074746); color:white;">
            <h3 class="mb-0 fw-bold">@ViewData["Title"]</h3>
        </div>

        <!-- Body -->
        <div class="card-body p-5 bg-light">
            <form asp-action="Add" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                        <input asp-for="FullName" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Enter Full Name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Enter Email Address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Enter Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label fw-semibold">Role</label>
                        <input asp-for="Role" class="form-control form-control-lg shadow-sm rounded-3" placeholder="e.g., Manager, Clerk" />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="HireDate" class="form-label fw-semibold">Hire Date</label>
                        <input asp-for="HireDate" type="date" class="form-control form-control-lg shadow-sm rounded-3" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Salary" class="form-label fw-semibold">Salary</label>
                        <input asp-for="Salary" type="number" step="0.01" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Enter Salary" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="form-label fw-semibold">Address</label>
                    <textarea asp-for="Address" class="form-control shadow-sm rounded-3" rows="3" placeholder="Enter Full Address"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-semibold">Is Active?</label>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Upload Photo</label>
                    <input type="file" name="PhotoFile" class="form-control form-control-lg shadow-sm rounded-3" accept="image/*" />
                </div>

                <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                    <a asp-action="List" class="btn btn-secondary btn-lg shadow-sm" style="font-weight:bold;">Cancel</a>
                    <button type="submit" class="btn btn-lg shadow-sm" style="background:#074746; color:white; font-weight:bold;">Add Staff</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    input.form-control, textarea.form-control {
        transition: all 0.3s ease;
    }

        input.form-control:focus, textarea.form-control:focus {
            box-shadow: 0 0 10px rgba(14, 124, 123, 0.4);
            border-color: #0d9488;
        }

    .btn-lg:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(14,124,123,0.4);
    }
</style>
