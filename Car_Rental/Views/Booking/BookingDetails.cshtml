@model Car_Rental.Models.Entities.Booking
@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    body {
        background-color: #f9fafb; /* Lighter, softer background */
    }

    .booking-container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    .booking-document {
        background-color: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 0.75rem; /* Softer radius */
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.05), 0 4px 6px -4px rgb(0 0 0 / 0.05);
        overflow: hidden;
    }

    /* --- Summary Panel --- */
    .summary-panel {
        display: flex;
        align-items: center;
        padding: 2rem;
        background-color: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }

        .summary-panel img {
            width: 150px;
            height: 100px;
            object-fit: cover;
            border-radius: 0.5rem;
            margin-right: 1.5rem;
        }

    .summary-details h2 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #111827;
        margin-bottom: 0.25rem;
    }

    .booking-ref-code {
        font-family: 'Courier New', Courier, monospace;
        font-size: 1rem;
        color: #6b7280;
        background-color: #f3f4f6;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
    }

    .status-tag {
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.35rem 0.75rem;
        border-radius: 9999px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .status-tag.booked {
            background-color: #d1fae5;
            color: #065f46;
        }

        .status-tag.cancelled {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .status-tag.pending {
            background-color: #fef3c7;
            color: #92400e;
        }


    /* --- Main Details --- */
    .document-body {
        padding: 2.5rem;
    }

    .section-header {
        font-size: 1.25rem;
        font-weight: 600;
        color: #111827;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
    }

        .section-header i {
            color: #6b7280;
            margin-right: 0.75rem;
        }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.75rem;
    }

    .detail-item dt { /* Definition Term - Label */
        font-size: 0.875rem;
        color: #6b7280;
        margin-bottom: 0.25rem;
    }

    .detail-item dd { /* Definition Details - Value */
        font-size: 1rem;
        font-weight: 500;
        color: #374151;
        margin-left: 0;
    }

    .total-price dd {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111827;
    }

    /* --- Sidebar Actions --- */
    .action-panel {
        position: sticky;
        top: 2rem;
    }

    .action-card {
        background-color: #ffffff;
        border: 1px solid #e5e7eb;
        border-radius: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .action-card-header {
        font-weight: 600;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
    }

        .action-card-header i {
            margin-right: 0.75rem;
            color: #4b5563;
        }

    .action-card-body {
        padding: 1.25rem;
    }
</style>

<div class="container booking-container">
    <div class="row">
        <!-- Main Booking Document -->
        <div class="col-lg-8">
            <div class="booking-document">
                <!-- Header / Summary Panel -->
                <div class="summary-panel">
                    <img src="@(Model.Car.ImageUrl ?? "/images/default-car.jpg")" alt="Car Image" />
                    <div class="flex-grow-1">
                        <h2>@Model.Car?.Brand @Model.Car?.Model</h2>
                        <p class="mb-2">Booking Reference: <strong class="booking-ref-code">@Model.BookingReference</strong></p>
                    </div>
                    <div>
                        <span class="status-tag @(Model.Status == Car_Rental.Enum.BookingStatus.Booked ? "booked" : Model.Status == Car_Rental.Enum.BookingStatus.Cancelled ? "cancelled" : "pending")">
                            @Model.Status
                        </span>
                    </div>
                </div>

                <!-- Document Body -->
                <div class="document-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <!-- Rental Period & Cost -->
                    <h5 class="section-header"><i class="fas fa-calendar-alt"></i>Rental Period & Cost</h5>
                    <dl class="details-grid">
                        <div class="detail-item">
                            <dt>Pickup Date</dt>
                            <dd>@Model.PickupDate.ToString("dddd, dd MMMM yyyy")</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Return Date</dt>
                            <dd>@Model.ReturnDate.ToString("dddd, dd MMMM yyyy")</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Duration</dt>
                            <dd>@((Model.ReturnDate - Model.PickupDate).Days) days</dd>
                        </div>
                        <div class="detail-item total-price">
                            <dt>Total Amount Paid</dt>
                            <dd>$@Model.TotalPrice</dd>
                        </div>
                    </dl>

                    <!-- Driver & Customer Information -->
                    <h5 class="section-header mt-5"><i class="fas fa-user-circle"></i>Driver & Customer Information</h5>
                    <dl class="details-grid">
                        <div class="detail-item">
                            <dt>Customer Name</dt>
                            <dd>@(Model.User?.FullName ?? Model.Guest?.FullName)</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Email Address</dt>
                            <dd>@(Model.User?.Email ?? Model.Guest?.Email)</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Phone Number</dt>
                            <dd>@(Model.User?.PhoneNumber ?? Model.Guest?.PhoneNumber)</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Driver License No.</dt>
                            <dd>@Model.DriverLicenseNumber</dd>
                        </div>
                        <div class="detail-item">
                            <dt>License Expiry</dt>
                            <dd>@Model.LicenseExpiryDate.ToString("dd MMMM yyyy")</dd>
                        </div>
                        <div class="detail-item">
                            <dt>National ID / Passport</dt>
                            <dd>@Model.NIC</dd>
                        </div>
                    </dl>

                    @if (Model.Insurance != null)
                    {
                        <h5 class="section-header mt-5"><i class="fas fa-shield-alt"></i>Insurance Coverage</h5>
                        <dl class="details-grid">
                            <div class="detail-item">
                                <dt>Plan Name</dt>
                                <dd>@Model.Insurance.Name</dd>
                            </div>
                            <div class="detail-item">
                                <dt>Coverage</dt>
                                <dd>@Model.Insurance.CoveragePercentage%</dd>
                            </div>
                        </dl>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar with Actions -->
        <div class="col-lg-4">
            <div class="action-panel">
                <!-- Quick Actions -->
                <div class="action-card">
                    <div class="action-card-header"><i class="fas fa-tools"></i>Quick Actions</div>
                    <div class="action-card-body">
                        <button onclick="window.print()" class="btn btn-outline-dark w-100 mb-2"><i class="fas fa-print me-2"></i> Print Details</button>
                        <a href="@Url.Action("MyBookings", "Booking")" class="btn btn-outline-secondary w-100"><i class="fas fa-arrow-left me-2"></i> My Bookings</a>
                    </div>
                </div>

                <!-- Extend Booking -->
                @if (Model.Status != Car_Rental.Enum.BookingStatus.Cancelled && Model.PickupDate > DateTime.Now)
                {
                    <div class="action-card">
                        <div class="action-card-header"><i class="fas fa-calendar-plus"></i>Extend Rental</div>
                        <div class="action-card-body">
                            <form asp-controller="Booking" asp-action="ExtendBooking" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookingId" value="@Model.BookingID" />
                                <input type="hidden" name="bookingReference" value="@Model.BookingReference" />
                                <div class="mb-3">
                                    <label class="form-label small">New Return Date</label>
                                    <input type="date" name="newReturnDate" class="form-control" min="@Model.ReturnDate.ToString("yyyy-MM-dd")" required>
                                </div>
                                <button type="submit" class="btn btn-dark w-100">Confirm Extension</button>
                            </form>
                        </div>
                    </div>
                }

                <!-- Cancel Booking -->
                @if (Model.Status != Car_Rental.Enum.BookingStatus.Cancelled && Model.PickupDate > DateTime.Now.AddHours(24))
                {
                    <div class="action-card">
                        <div class="action-card-header"><i class="fas fa-times-circle"></i>Cancel Booking</div>
                        <div class="action-card-body">
                            <p class="small text-muted mb-3">Cancellable up to 24 hours before pickup.</p>
                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#cancelModal"><i class="fas fa-trash-alt me-2"></i>Request Cancellation</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 0.75rem;">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this booking?</p>
                <p class="text-danger"><strong>This action cannot be undone.</strong></p>
                <div class="alert alert-secondary small">
                    <strong>Ref:</strong> @Model.BookingReference<br>
                    <strong>Car:</strong> @Model.Car?.Brand @Model.Car?.Model<br>
                    <strong>Pickup:</strong> @Model.PickupDate.ToString("dd MMM yyyy")
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                <form asp-controller="Booking" asp-action="CancelBooking" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="bookingId" value="@Model.BookingID" />
                    <input type="hidden" name="bookingReference" value="@Model.BookingReference" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-times-circle me-2"></i> Yes, Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const extendDateInput = document.querySelector('input[name="newReturnDate"]');
            if (extendDateInput) {
                const currentReturnDate = '@Model.ReturnDate.ToString("yyyy-MM-dd")';
                const minDate = new Date(currentReturnDate);
                minDate.setDate(minDate.getDate() + 1);
                extendDateInput.setAttribute('min', minDate.toISOString().split('T')[0]);
            }
        });
    </script>
    <style>
        @@media print {
            body * {
                visibility: hidden;
            }

            .booking-document, .booking-document * {
                visibility: visible;
            }

            .booking-document {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                border: none;
                box-shadow: none;
            }
        }
    </style>
}