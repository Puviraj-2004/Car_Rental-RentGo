            width: 20px;
        }

        .modal-xl {
            max-width: 1200px;
        }

        @@media print {
            .modal-header, .modal-footer {
                display: none !important;
            }
            
            .modal-body {
                padding: 0 !important;
            }
        }
    </style>
}

<!-- Add CSRF Token for AJAX requests -->
@Html.AntiForgeryToken()
